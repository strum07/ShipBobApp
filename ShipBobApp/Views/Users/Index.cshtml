@model IEnumerable<ShipBobApp.Models.User>

@{
    ViewData["Title"] = "User Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>User Dashboard</h2>
<p>The list will only consists of names matching the filter. Has no Angular - Works on Data Model mapped by EF and the search string query</p>
<p> URL format: <strong> /Users?SearchString=</strong></p>
<p>Search string can consist of any part of the name : First/Last </p>

<hr/>



<div class="well">
    

    <form asp-action="Index" method="get">
        <div class="form-action no-color">
            <p>
                <input type="text" name="SearchString" value="@ViewData["currentFilter"]" class="form-control" placeholder="Search for Users..." />
                <br/>
                <input type="submit" value="Search" class="btn btn-default btn-primary" /> |
                <a asp-action="Index">Back to Full List</a>
            
            </p>
        </div>
    </form>




    <hr />

    <p>
        <a asp-action="Create">Create New User</a>
    </p>
    <table class="table">
        <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
               Last Name
            </th>
            <th>
                Actions
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
           
            <tr>
                <td id="fname">
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.UserId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.UserId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.UserId">Delete</a>
                </td>
                
                <script>


                    var customer = getElementById(fname);
                

                </script>
            </tr>
        }
        </tbody>
    </table>
</div>

